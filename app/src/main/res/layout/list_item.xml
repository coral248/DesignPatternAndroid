<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_name"
        android:text="@string/item_code_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_code_text"
        android:layout_toRightOf="@+id/item_code_text"
        android:layout_below="@+id/item_name"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/item_code_text"
        android:text="@string/item_price_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_price_text"
        android:layout_toRightOf="@+id/item_price_text"
        android:layout_below="@+id/item_code_text"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/item_code_text"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:text=""
        android:textSize="0sp" />

</RelativeLayout>